use('empresa');

// Agregaci√≥n para combinar datos de alumnos con los cursos usando $lookup
db.alumnos.aggregate([
  {
    $lookup: {
      from: "cursos",
      localField: "id_cursos",
      foreignField: "_id",
      as: "cursos_detalle"
    }
  },
  // ver alumnos y cursos
  {
  $project: {
    _id:0,
    nombre:1,
    "cursos_detalle.nombre":1
  }
}
]);